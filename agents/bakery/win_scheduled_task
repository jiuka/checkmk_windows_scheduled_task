from pathlib import Path
from typing import Any

from .bakery_api.v0 import FileGenerator, OS, Plugin, register


def get_win_scheduled_task_files(conf: Any) -> FileGenerator:
    yield Plugin(base_os=OS.WINDOWS, source=Path('win_scheduled_task.ps1'))


register.bakery_plugin(
    name='win_scheduled_task',
    files_function=get_win_scheduled_task_files,
)
